<Window x:Class="WpfApp4.pages.Gallery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4.pages"
        mc:Ignorable="d"
        Title="Gallery" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button Content="&lt;&lt;" DockPanel.Dock="Left" Uid="Left" Click="Button_Click"/>
            <Button Content=">>" DockPanel.Dock="Right" Uid="Right" Click="Button_Click"/>
            <Button Content="Установить в качестве аватара" DockPanel.Dock="Bottom" Uid="Avatar" Click="Button_Click"/>
            <Image x:Name="ImgUserPic"/>
        </DockPanel>
    </Grid>
</Window>